<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>管理者用　会員詳細ページ</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @farmers.each do |farmer| %>
            <tr>
              <td><%= link_to user_path(farmer.user) do %>
                <%= image_tag farmer.user.get_profile_image, size:'50x50' %>
                <% end %>
              </td>
              <td><%= link_to farmer.title,farmer %></td>
              <td><%= farmer.body %></td>
              <td><%= %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>