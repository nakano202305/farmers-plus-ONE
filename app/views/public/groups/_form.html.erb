<%= form_with model: group, local: true do |f| %>
  <div class= "form-group">
    <%= f.label :name, "グループ名" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class= "form-group">
    <%= f.label :prefecture, "都道府県名" %>
    <%= f.select :prefecture, Group.prefectures.keys, { class: 'form-control' } %>
  </div>
  <div class= "form-group">
    <%= f.label :introduction, "グループについて" %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>
  <div class= "form-group">
    <%= f.label :image, "グループ画像" %>
    <%= f.file_field :image, class: "form-control-file" %>
  </div>
  <div class= "form-group">
    <%= f.label :farmer_id %>
    <%= f.collection_select :farmer_id, current_user.farmers, :id, :title, { include_blank: "--select--" }, { class: 'form-control' } %>
  </div>
  <div class= "form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
<%end%>
