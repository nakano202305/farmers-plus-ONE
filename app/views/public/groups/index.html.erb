<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User Info</h2>
      <%= render 'public/users/info', user: current_user %>
      <h2 class="mt-3">New Farmer</h2>
      <%= render 'public/farmers/form', farmer: @farmer %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>都道府県名</th>
            <th>グループについて</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td>
                <% if group.image.attached? %>
                  <%= image_tag group.image, size:'100x100' %>
                <% end %>
              </td>
              <td><%= link_to group.name, group %></td>
              <td><%= group.prefecture %></td>
              <td><%= group.introduction %></td>
              <td><%= link_to group.farmer.title, group.farmer %></td>
              <td>
                <% if group.user_id == current_user.id %>
                  <%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %>
                  <%= link_to 'Destroy', group, method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>